{
  "$id": "https://open-metadata.org/schema/entity/applications/configuration/retentionPolicyConfiguration.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Retention Policy Configuration",
  "type": "object",
  "description": "Retention Policy Configuration.",
  "properties": {
    "entity": {
      "title": "Entity",
      "description": "The entity for which the records will be deleted",
      "type": "string",
      "enum": ["EventSubscription"],
      "default": "EventSubscription",
      "readOnly": true
    },
    "retentionPeriod": {
      "title": "Retention Period",
      "description": "Select the retention period after which the records will be deleted",
      "type": "string",
      "enum": ["One week", "Two weeks", "One month", "Three months", "Six months"],
      "default": "One week"
    }
  },
  "required": ["entity", "retentionPeriod"],
  "additionalProperties": false
}